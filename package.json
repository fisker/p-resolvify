{
  "name": "p-resolvify",
  "version": "2.0.5",
  "description": "Handle promise rejection like resolved",
  "keywords": [
    "promise",
    "rejection",
    "resolve"
  ],
  "homepage": "https://github.com/fisker/p-resolvify#readme",
  "bugs": {
    "url": "https://github.com/fisker/p-resolvify/issues"
  },
  "repository": "fisker/p-resolvify",
  "funding": "https://github.com/fisker/p-resolvify?sponsor=1",
  "license": "MIT",
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "sideEffects": false,
  "main": "dist/index.common.js",
  "jsdelivr": "dist/index.min.js",
  "unpkg": "dist/index.min.js",
  "module": "dist/index.min.mjs",
  "browser": "dist/index.min.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:js": "rollup --config",
    "clean": "run-p clean:*",
    "clean:dist": "del-cli dist",
    "dev": "rollup --config --watch",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:markdown": "yarn lint:markdown --fix",
    "format:package-json": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "format:prettier": "yarn lint:prettier --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"**/*.{js,mjs,vue}\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\"",
    "lint:package-json": "yarn run format:package-json --check",
    "lint:prettier": "prettier \"**/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml}\" --check",
    "release": "run-s clean lint build test format dist",
    "test": "ava",
    "test-coverage": "nyc ava"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "babel": true,
    "require": [
      "esm"
    ],
    "verbose": true
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "devDependencies": {
    "@ava/babel": "1.0.1",
    "@babel/core": "7.12.10",
    "@babel/plugin-proposal-object-rest-spread": "7.12.1",
    "@babel/preset-env": "7.12.7",
    "@commitlint/cli": "11.0.0",
    "@fisker/commitlint-config": "1.3.1",
    "@fisker/eslint-config": "4.0.0",
    "@fisker/husky-config": "4.0.0",
    "@fisker/lint-staged-config": "3.0.0",
    "@fisker/prettier-config": "4.0.0",
    "ava": "3.14.0",
    "babel-jest": "26.6.3",
    "babel-plugin-transform-async-to-promises": "0.8.15",
    "babel-polyfill": "6.26.0",
    "cz-conventional-changelog": "3.3.0",
    "del-cli": "3.0.1",
    "eslint": "7.15.0",
    "esm": "3.2.25",
    "fast-cartesian-product": "1.0.3",
    "husky": "5.0.4",
    "lint-staged": "10.5.3",
    "markdownlint-cli": "0.25.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "prettier": "2.2.1",
    "rollup": "2.34.2",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-terser": "7.0.2",
    "sort-package-json": "1.48.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
