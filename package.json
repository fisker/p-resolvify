{
  "name": "p-resolvify",
  "version": "1.2.0",
  "description": "resolve promise rejection",
  "main": "lib/index.common.js",
  "module": "lib/index.mjs",
  "browser": "lib/index.js",
  "unpkg": "lib/index.js",
  "jsdelivr": "lib/index.js",
  "keywords": [
    "promise",
    "resolve",
    "rejection"
  ],
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
    "url": "https://www.fiskercheung.com/"
  },
  "scripts": {
    "dev": "rollup --config --watch",
    "clean": "rm -rf lib",
    "build": "run-p build:*",
    "build:js": "rollup --config",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint **/*.{js,mjs,vue} --fix",
    "lint:markdown": "markdownlint **/*.md --ignore \"**/node_modules/**\"",
    "release": "run-s clean lint build test prettier dist",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "prettier": "prettier **/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml} --write"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "license": "MIT",
  "repository": "fisker/p-resolvify",
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/preset-env": "7.4.5",
    "@commitlint/cli": "^8.0.0",
    "@fisker/commitlint-config": "^1.0.9",
    "@fisker/eslint-config": "^1.1.0",
    "@fisker/eslint-config-jest": "^1.0.3",
    "@fisker/lint-staged-config": "^1.0.4",
    "@fisker/prettier-config": "^1.0.17",
    "babel-jest": "^24.8.0",
    "babel-polyfill": "^6.26.0",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "^5.16.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "markdownlint-cli": "^0.16.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "rollup": "^1.14.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-terser": "^5.0.0"
  },
  "files": [
    "lib"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-emoji"
    }
  }
}
