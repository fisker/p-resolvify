  "description": "resolve promise rejection",
  "main": "lib/index.common.js",
  "module": "lib/index.mjs",
  "browser": "lib/index.js",
  "unpkg": "lib/index.js",
  "jsdelivr": "lib/index.js",
  "keywords": ["promise", "resolve", "rejection"],
  "author": {
    "name": "fisker Cheung",
    "email": "lionkay@gmail.com",
