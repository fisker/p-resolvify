  },
  "scripts": {
    "dev": "rollup --config --watch",
    "clean": "rm -rf lib",
    "build": "run-p build:*",
    "build:js": "rollup --config",
    "test": "jest",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint **/*.{js,mjs,vue} --fix",
    "lint:markdown": "markdownlint **/*.md --ignore \"node_modules/**\"",
    "release": "run-s clean lint build test prettier dist",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "prettier": "prettier **/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml} --write"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "repository": "fisker/p-resolvify",
  "devDependencies": {
    "@babel/core": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "babel-jest": "^24.7.1",
    "babel-polyfill": "^6.26.0",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "^5.16.0",
    "eslint-config-fisker": "^4.5.0",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "markdownlint-cli": "^0.15.0",
    "np": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "prettier-config-fisker": "^1.0.3",
    "rollup": "^1.10.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-terser": "^4.0.4"
  },
  "files": ["lib"],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-emoji"
